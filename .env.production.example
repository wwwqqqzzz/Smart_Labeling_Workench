# ==========================================
# 生产环境配置
# ==========================================

# ==========================================
# API Keys（必需）
# ==========================================
GLM_API_KEY=your_glm_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# 数据库配置
# ==========================================
# SQLite（默认，适合小型部署）
DATABASE_URL=sqlite:///./data/conversations.db

# PostgreSQL（推荐用于生产环境）
# DATABASE_URL=postgresql://username:password@localhost:5432/smartlabeling

# ==========================================
# 前端配置
# ==========================================
# 生产环境API地址（使用Nginx代理时用相对路径）
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==========================================
# CORS配置（生产环境）
# ==========================================
# 允许的前端域名列表
BACKEND_CORS_ORIGINS=["http://localhost","http://your-domain.com","https://your-domain.com"]

# ==========================================
# 应用配置
# ==========================================
# 调试模式（生产环境设为false）
DEBUG=false

# 日志级别
LOG_LEVEL=INFO

# ==========================================
# 性能配置
# ==========================================
# 后端工作进程数（建议：CPU核心数 * 2 + 1）
WORKERS=4

# 请求超时时间（秒）
TIMEOUT=60
